<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 1. Header Section -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/beesnesslogo"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Your Business"
            android:id="@+id/tvTitleCreateStore"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your store details below to get started."
            android:id="@+id/tvDescCreateStore"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <!-- 2. Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Store Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Name"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="e.g. John's Honey Farm"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp"/>

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location / Address"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etStoreAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:hint="Full Address"
                    android:padding="12dp"
                    android:inputType="textPostalAddress|textMultiLine"
                    android:layout_marginBottom="16dp"/>

                <!-- Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Phone"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etStorePhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="+62 8..."
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="phone"
                    android:layout_marginBottom="16dp"/>

                <!-- Category Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Category"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:popupTheme="@style/SpinnerNoOverlap"

                    android:background="@drawable/bg_spinner_rounded"
                    android:layout_marginBottom="24dp"/>

                <!-- Create Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateStore"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Create Store"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/honey_primary"
                    app:rippleColor="#FFFFFF"/>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    app:cornerRadius="12dp"
                    android:text="Cancel"
                    android:visibility="gone"
                    android:enabled="false"
                    android:id="@+id/cancelButton"
                    android:backgroundTint="@color/cardview_dark_background"/>

                <!-- Loading Indicator (Hidden) -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/honey_primary"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>